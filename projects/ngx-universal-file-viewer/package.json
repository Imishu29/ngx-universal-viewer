    "ng-packagr": "^17.0.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "rxjs": "~7.8.0",
    "semantic-release": "^22.0.8",
    "tslib": "^2.3.0",
    "typescript": "~5.2.2",
    "zone.js": "~0.14.2"
